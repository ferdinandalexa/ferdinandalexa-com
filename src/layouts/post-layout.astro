---
import BaseLayout from '../layouts/base-layout.astro';

const { content: { title, description }} = Astro.props;
---

<style is:inline>
  main h1{
    font: var(--h2);
  }
  
  main h2{
    font: var(--h3);
    padding-top: 1.5rem;
  }

  main h3{
    font: var(--h4);
  }

  main p{
    color: var(--c-text);
    font: var(--body-01)
  }

  main a{
    color: var(--c-anchor);
  }

  main ul, 
  main ol, 
  main li{
    color: var(--c-text);
    font: var(--body-01);
    list-style: unset;
    margin-left: 1.75rem;
  }
</style>

<BaseLayout title={ `${title} | ferdinandalexa` } description={ description }>
  <slot/>
</BaseLayout>
