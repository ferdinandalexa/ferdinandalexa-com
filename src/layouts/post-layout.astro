---
import readingTime from 'reading-time';
import BaseLayout from '../layouts/base-layout.astro';

const { content: { title, description, astro: { source } }} = Astro.props;

const minutes = Math.round(readingTime(source).minutes);
---

<style is:inline>
  main h1{
    font: var(--heading-large);
  }
  
  main h2{
    font: var(--heading-medium);
    padding-top: 1.5rem;
  }

  main h3{
    font: var(--heading-base);
  }

  main p{
    color: var(--c-text);
    font: var(--body-medium)
  }

  main a{
    color: var(--c-anchor);
  }

  main ul, 
  main ol, 
  main li{
    color: var(--c-text);
    font: var(--body-medium);
    list-style: unset;
    margin-left: 1rem;
  }

  main pre{
    padding: 2rem;
  }

  main pre code{
    font: var(--action-base);
    letter-spacing: .05ch;
  }

  main p code{
    color: var(--c-inline-code);
    background-color: var(--c-inline-code-bg);
    font: var(--action-base);
    border-radius: .25rem;
    padding: .75ch;
    margin: 0 .25ch;
  }
</style>

<style>
  h1{
    margin-bottom: .5rem;
  }

  span{
    color: var(--c-text);
    font: var(--caption);
  }
</style>

<BaseLayout title={ `${title} | ferdinandalexa` } description={ description }>
  <main>
    <header>
      <h1>{title}</h1>
      <span>{minutes} min de lectura.</span>
    </header>
    <slot/>
  </main>
</BaseLayout>
