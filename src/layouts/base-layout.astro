---
import HeadFavicon from '../components/head-favicon.astro';
import HeadOg from '../components/head-og.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

import '../styles/colors.css'
import '../styles/global.css'

const { title } =  Astro.props;
const { href } = Astro.canonicalURL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
      
  <title>{ title }</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <script defer src="/js/changeTheme.js" />

  <link rel="stylesheet" href="/css/transitions.css">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@500&family=Source+Sans+Pro:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/fonts.css">

  <HeadFavicon />
  <HeadOg title={ title } permalink={ href } />
</head>
<body class="">
  <Header />
  <main>
    <slot></slot>
  </main>
  <Footer />
</body>
</html>