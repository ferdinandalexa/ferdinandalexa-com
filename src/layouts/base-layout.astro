---
import HeadFavicon from "../components/head-favicon.astro";
import HeadOg from "../components/head-og.astro";
import Header from "../components/header/header.astro";
import Footer from "../components/footer/footer.astro";

import "../styles/fonts.css";
import "../styles/transitions.css";
import "../styles/colors.css";
import "../styles/global.css";

const { title, description, slug, locale = "es" } = Astro.props;
const { href } = Astro.url;
---

<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>

    <script defer src="/js/changeTheme.js"></script>

    <style>
      @font-face {
        font-display: swap;
        font-family: "AtkinsonHyperlegible";
        font-style: normal;
        font-weight: normal;
        src: local(Atkinson-Hyperlegible), local(Atkinson-Hyperlegible-Regular),
          url(/fonts/Atkinson-Hyperlegible-Regular.woff2) format("woff2");
      }

      @font-face {
        font-display: swap;
        font-family: "AtkinsonHyperlegible";
        font-style: normal;
        font-weight: bold;
        src: local(Atkinson-Hyperlegible), local(Atkinson-Hyperlegible-Bold),
          url(/fonts/Atkinson-Hyperlegible-Bold.woff2) format("woff2");
      }
    </style>

    <link
      rel="stylesheet"
      href="/css/themes/light-theme.css"
      media="screen and (prefers-color-scheme: light)"
    />
    <link
      rel="stylesheet"
      href="/css/themes/dark-theme.css"
      media="screen and (prefers-color-scheme: dark)"
    />

    <HeadFavicon />
    <HeadOg {title} {description} {slug} permalink={href} />
  </head>
  <body class="">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
