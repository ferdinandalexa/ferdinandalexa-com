---
import LogoGithub from "./icons/logo-github.astro";
import LogoInstagram from "./icons/logo-instagram.astro";
import LogoLinkedin from "./icons/logo-linkedin.astro";
import LogoTwitter from "./icons/logo-twitter.astro";
---

<style>
  footer {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    max-width: 768px;
    padding: 1rem 0;
    width: 100%;
  }

  @media (min-width: 768px) {
    footer {
      margin-bottom: 1rem;
    }
  }

  footer div {
    margin-top: 1.5rem;
    text-align: center;
  }

  footer h3 {
    color: var(--blue-500);
    font-size: var(--fs-large);
    font-weight: var(--fw-bold);
  }

  footer div ul {
    display: flex;
    gap: 1.75rem;
    justify-content: center;
    margin: 0 auto;
    margin-top: 0.75rem;
    max-width: 300px;
  }

  ul a {
    display: inline-block;
    color: var(--blue-500);
  }

  ul a:hover {
    display: inline-block;
    color: var(--blue-300);
  }
</style>

