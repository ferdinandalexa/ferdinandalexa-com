---
import Logo from "./icons/logo.astro";
import Switch from "./switch.astro";
---

<style>
  header,
  div,
  nav,
  nav > ul {
    align-items: center;
    display: flex;
    flex-direction: row;
  }

  header {
    --header-height: 64px;
    height: var(--header-height);
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
    justify-content: space-between;
  }

  @media (min-width: 768px) {
    header {
      margin-top: 1rem;
    }
  }

  header .logo {
    display: inline-flex;
    fill: var(--blue-300);
    transition: var(--opacity-transition), var(--transform-transition);
  }

  :global(body.dark) header .logo {
    color: var(--blue-50);
    fill: var(--blue-50);
  }

  :global(body.dark) header .logo:hover {
    color: var(--blue-50);
    fill: var(--blue-200);
  }

  header .logo:hover {
    opacity: 0.5;
    transform: scale(0.95);
  }

  header > div {
    gap: 0.75rem;
  }

  nav > ul {
    font-size: var(--fs-base);
    font-weight: var(--fw-bold);
    margin-top: 0.15rem;
    height: 100%;
  }

  nav a {
    color: var(--blue-500);
    display: inline-block;
    vertical-align: baseline;
    padding: 0.75rem;
  }

  :global(body.dark) nav a {
    color: var(--blue-50);
  }

  :global(body.dark) nav a:hover {
    color: var(--blue-200);
  }

  nav a:hover {
    color: var(--blue-300);
  }

  nav li:first-child {
    padding-left: 0;
  }

  nav li:nth-child(n + 2)::before {
    content: "|";
    color: var(--c-anchor);
    display: inline-block;
    opacity: 0.3;
  }
</style>

<header>
  <div>
    <a href="/" class="logo">
      <Logo size="28" />
    </a>

    <nav>
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </nav>
  </div>

  <Switch />
</header>
