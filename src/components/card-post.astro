---
const { title, date, url } = Astro.props;

const datePublish = new Date(date)
  .toLocaleDateString('es', { 
    "year": "numeric", 
    "month": "long", 
    "day": "numeric" 
  });
---

<style>
  a{
    background-color: var(--card-bg);
    border-radius: 0.5rem;
    border: 1px solid rgba(0,47,108,.03);
    box-shadow: 0 10px 10px -5px rgb(0 47 108 / 4%);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: end;
    min-height: 100px;
    padding: 1rem;
    transition: var(--transform-transition);
    width: 100%;
  }

  a h3{
    color: var(--card-text);
    font: var(--h4);
  }
  
  a time{
    color: var(--card-time);
    font: var(--pill);
    word-spacing: -.35ch;
  }

  a:hover {
    opacity: unset;
    transform: scale(.99);
    background-color: var(--card-hover);
  }

  a:hover h3{
    color: var(--card-hover-text);
  }
  
  a:hover time{
    color: var(--card-hover-time);
  }
</style>

<a href={ url } class="card">
  <h3>{ title }</h3>
  <div>
    <time datetime="2011-11-18">{ datePublish }</time>
  </div>
</a>

