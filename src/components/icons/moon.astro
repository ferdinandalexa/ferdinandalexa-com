---
let width = Astro.props.size || "18px";
let height = Astro.props.size || "18px";
let color = Astro.props.color;
---

<style>
    svg{
      stroke: var(--gray-300);
    }

    :global(body.dark) svg{
      stroke: var(--blue-200);
    }  
</style>

<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width={width} height={height} viewBox="0 0 16 16">
  <path 
    fill="none" 
    stroke={color}
    stroke-linecap="round" 
    stroke-linejoin="round" 
    stroke-width="2" 
    d="M1.75 8c0 3.45 2.8 6.25 6.25 6.25c3.41-.003 6.25-3 6.25-6c-1 .5-4 1.5-6-.5s-1-5-.5-6c-3 0-6 2.84-6 6.25z"/>
</svg>