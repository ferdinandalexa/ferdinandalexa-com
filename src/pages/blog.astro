---
import BaseLayout from '../layouts/base-layout.astro';
import CardPost from '../components/card-post.astro';

let allPosts = await Astro.glob('./blog/*.md');
---

<style>
  h2{
    color: var(--blue-300);
    font: var(--h3);
    margin-bottom: .75rem;
  }

  div{
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>

<BaseLayout title="Blog | ferdinandalexa">
  <h2>Blog</h2>
  <div>
    {
      allPosts.slice(0, 3).map((post) => (
        <CardPost 
          title={post.frontmatter.title}
          date={post.frontmatter.date}
          url={post.url}
        />
      ))
    }
  </div>
</BaseLayout>
